{
  "openapi": "3.0.0",
  "info": {
    "title": "Product Management API",
    "version": "1.0.0",
    "description": "API for managing products with authentication and authorization"
  },
  "servers": [
    {
      "url": "http://localhost:5000",
      "description": "Development server"
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Bearer token authentication. Use admin token for create/delete operations."
      }
    },
    "schemas": {
      "Product": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "integer",
            "example": 101
          },
          "name": {
            "type": "string",
            "minLength": 2,
            "maxLength": 101,
            "example": "Wool Blazer"
          },
          "description": {
            "type": "string",
            "minLength": 2,
            "maxLength": 101,
            "example": "Formal navy blue wool blazer with notched lapel"
          },
          "price": {
            "type": "number",
            "minimum": 0,
            "maximum": 999999,
            "example": 159.99
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "createdBy": {
            "type": "string",
            "nullable": true
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedBy": {
            "type": "string",
            "nullable": true
          },
          "lastAccessedAt": {
            "type": "string",
            "format": "date-time"
          },
          "lastAccessedBy": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "CreateProductRequest": {
        "type": "object",
        "required": [
          "name",
          "description",
          "price"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 2,
            "maxLength": 101,
            "example": "Wool Blazer",
            "description": "Product name (2-101 characters)"
          },
          "description": {
            "type": "string",
            "minLength": 2,
            "maxLength": 101,
            "example": "Formal navy blue wool blazer",
            "description": "Product description (2-101 characters)"
          },
          "price": {
            "type": "number",
            "minimum": 0,
            "maximum": 999999,
            "example": 159.99,
            "description": "Product price (0-999,999)"
          }
        }
      },
      "SuccessResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string"
          },
          "data": {
            "oneOf": [
              {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Product"
                }
              },
              {
                "$ref": "#/components/schemas/Product"
              }
            ]
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "message": {
            "type": "string"
          },
          "data": {
            "nullable": true
          }
        }
      }
    }
  },
  "security": [
    {
      "BearerAuth": []
    }
  ],
  "paths": {
    "/api/products/": {
      "get": {
        "summary": "Get all products",
        "operationId": "getAllProducts",
        "tags": [
          "Products"
        ],
        "description": "Retrieve all products (requires authentication)",
        "responses": {
          "200": {
            "description": "Products retrieved successfully",
            "content": {
              "application/json": {
                "example": {
                  "success": true,
                  "message": "Total of 2 products retrieved successfully",
                  "data": [
                    {
                      "productId": 101,
                      "name": "Wool Blazer",
                      "description": "Formal navy blue wool blazer with notched lapel and two-button closure",
                      "price": 159.99,
                      "createdAt": "2024-01-20T09:00:00",
                      "createdBy": null,
                      "updatedAt": "2024-04-10T11:25:00",
                      "updatedBy": null,
                      "lastAccessedAt": "2026-01-22T05:32:17.8685859",
                      "lastAccessedBy": "_search_api"
                    },
                    {
                      "productId": 102,
                      "name": "Cashmere Sweater",
                      "description": "Luxurious 100% cashmere crew neck sweater in charcoal gray",
                      "price": 199.99,
                      "createdAt": "2024-02-15T14:30:00",
                      "createdBy": null,
                      "updatedAt": "2024-03-25T16:50:00",
                      "updatedBy": null,
                      "lastAccessedAt": "2026-01-22T05:32:17.9399425",
                      "lastAccessedBy": "_search_api"
                    }
                  ]
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new product",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name",
                  "description",
                  "price"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "minLength": 2,
                    "maxLength": 101,
                    "example": "New Product",
                    "description": "Product name"
                  },
                  "price": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 999999,
                    "example": 99.99,
                    "description": "Product price"
                  },
                  "description": {
                    "type": "string",
                    "minLength": 2,
                    "maxLength": 101,
                    "example": "Product description",
                    "description": "Product description"
                  }
                }
              },
              "example": {
                "name": "New Product",
                "description": "A great new product",
                "price": 99.99
              }
            }
          },
          "required": true,
          "description": "Product creation data"
        },
        "responses": {
          "201": {
            "description": "Product created successfully",
            "content": {
              "application/json": {
                "example": {
                  "success": true,
                  "message": "Product created successfully",
                  "data": [
                    {
                      "productId": 104,
                      "name": "Cotton Blazer",
                      "description": "Formal navy blue cotton blazer with notched lapel and two-button closure",
                      "price": 159.99,
                      "createdAt": "2026-01-22T05:58:03.0632566Z",
                      "createdBy": "_create_api",
                      "updatedAt": null,
                      "updatedBy": null,
                      "lastAccessedAt": null,
                      "lastAccessedBy": null
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Validation errors",
            "content": {
              "application/json": {
                "examples": {
                  "InvalidPrice": {
                    "summary": "Product name missing",
                    "value": {
                      "success": false,
                      "message": "Validation Error: The Name field is required."
                    }
                  },
                  "MissingName": {
                    "summary": "Description name missing",
                    "value": {
                      "success": false,
                      "message": "Validation Error: The Description field is required."
                    }
                  },
                  "InvalidCategory": {
                    "summary": "Invalid price value",
                    "value": {
                      "success": false,
                      "message": "Validation Error: Price must be between 0 and 999,999"
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Unprocessable Entity",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "message": "Malformed JSON in request body"
                }
              }
            }
          }
        }
      }
    },
    "/api/products/{id}": {
      "get": {
        "summary": "Get product by ID",
        "operationId": "getProductById",
        "tags": [
          "Products"
        ],
        "description": "Retrieve a product by its ID (requires authentication)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Product ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Product retrieved successfully",
            "content": {
              "application/json": {
                "example": {
                  "success": true,
                  "message": "Product retrieved successfully",
                  "data": [
                    {
                      "productId": 101,
                      "name": "Wool Blazer",
                      "description": "Formal navy blue wool blazer with notched lapel and two-button closure",
                      "price": 159.99,
                      "createdAt": "2024-01-20T09:00:00",
                      "createdBy": null,
                      "updatedAt": "2024-04-10T11:25:00",
                      "updatedBy": null,
                      "lastAccessedAt": "2026-01-22T05:58:02.8627889Z",
                      "lastAccessedBy": "_search_api"
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Invalid product ID format",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "message": "'20111a' is not a valid ProductId"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Missing or invalid authentication token",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "message": "Unauthorized"
                }
              }
            }
          },
          "404": {
            "description": "Not Found - Product does not exist",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "message": "ProductId '20111' was not found."
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete a product",
        "operationId": "deleteProduct",
        "tags": [
          "Products"
        ],
        "description": "Delete a product by its ID (requires admin authentication)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Product ID to delete"
          }
        ],
        "responses": {
          "200": {
            "description": "Product deleted successfully",
            "content": {
              "application/json": {
                "example": {
                  "success": true,
                  "message": "Product deleted successfully"                
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Invalid product ID format",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "message": "'201a' is not a valid ProductId"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Missing or invalid authentication token",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "message": "Unauthorized"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden - Restricted product ID or insufficient permissions",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "message": "ProductId '101' is restricted and cannot be deleted"
                }
              }
            }
          },
          "404": {
            "description": "Not Found - Product does not exist",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "message": "'2000' is not a valid ProductId"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "message": {
            "type": "string",
            "example": "Validation failed"
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "field": {
                  "type": "string",
                  "example": "emailAddress"
                },
                "error": {
                  "type": "string",
                  "example": "Invalid email format"
                }
              }
            }
          }
        }
      }
    }
  }
}
